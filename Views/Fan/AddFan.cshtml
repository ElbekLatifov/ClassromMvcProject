
@model FanDto

<h1 style="margin: auto; text-align: center">Create Scince</h1>
<form class="row g-3" style="width: 400px; margin: auto" asp-controller="Fan" asp-action="AddFan" asp-route-schoolid="@ViewBag.SchoolId" enctype="multipart/form-data" method="post">
    <div>
        <input name="Name" class="form-control" asp-for="Name" type="text" placeholder="Name" required/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div>
        <input name="Description" class="form-control" asp-for="Description" type="text" placeholder="Description" required/>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <button class="form-control btn btn-success" type="submit">Create</button>
    <a class="link-info" asp-controller="Home" asp-action="Index">Back</a>
</form>
